<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :categories, as: :check_boxes %>
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.input :featured_image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
